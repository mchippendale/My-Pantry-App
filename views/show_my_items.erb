


<div class="show-my-items-wrapper">
    

    <div class="my-items-wrapper">
        <% items.each do |item| %>
            <div class="my-item">
                <h2><%= item['name'] %></h2>

                <img src="<%= item['image_url'] %>" alt="">
                <img src="<%= item['image_upload'] %>" alt="">

                <p><%= item['comment'] %></p>

                <a href="/items/<%= item['id'] %>/edit" class="update-item">Update item</a><br><br>

                <form action="/session/<%= item['id'] %>/delete" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button class="throw-out-btn">Throw out item</button>
                </form>
                <!-- <a href="/items/<%= item['id'] %>/delete" class="update-item">Throw out item</a> -->

            </div>
        <% end %>
    </div>
    <div>
        <a href="/items/<%= session[:user_id] %>/new">Stock my pantry</a><br><br>
        <a href="/">Close pantry</a>
    </div>
    
</div>